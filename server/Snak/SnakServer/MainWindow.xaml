<Window x:Class="SnakServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Closing="WindowClosing">
    <Grid>
        <Label x:Name="instancesListLabel" Content="List of highscores:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="498"/>
        <Button x:Name="ClearHighscores" Content="Clear Highscores" HorizontalAlignment="Left" Margin="10,273,0,0" VerticalAlignment="Top" Width="141" Click="ClearHighscores_Click"/>
        <DataGrid x:Name="dataGrid" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" Height="227" Width="498"/>
        <Button x:Name="showAllScoresButton" Content="Show all scores" HorizontalAlignment="Left" Margin="156,273,0,0" VerticalAlignment="Top" Width="141" Click="ShowAllScoresButton_Click"/>
        <Button x:Name="showLevelHighscoresButton" Content="Show level highscores" HorizontalAlignment="Left" Margin="302,273,0,0" VerticalAlignment="Top" Width="141" Click="ShowLevelHighscoresButton_Click"/>

    </Grid>
</Window>
