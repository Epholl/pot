<Window x:Class="SnakServer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SnakServer"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525"
        Closing="WindowClosing">
    <Grid>
        <ListBox x:Name="runningInstancesListBox" HorizontalAlignment="Left" Height="180" Margin="10,41,0,0" VerticalAlignment="Top" Width="141"/>
        <Label x:Name="runningInstancesLabel" Content="Running instances:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <Button x:Name="createInstanceButton" Content="Create new" HorizontalAlignment="Left" Margin="10,291,0,0" VerticalAlignment="Top" Width="141" Click="createInstanceButton_Click"/>

    </Grid>
</Window>
